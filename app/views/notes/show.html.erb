<p style="color: green"><%= notice %></p>

<%= render 'note', note: @note %> <!-- Ensure you have a _note.html.erb partial -->

<div>
  <%= link_to "Edit this note", edit_game_note_path(@note.parent, @note) %> |
  <%= link_to "Back to notes", notes_path %>

  <%= button_to "Destroy this note", game_note_path(@note.parent, @note), method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
